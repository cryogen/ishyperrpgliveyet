extends layout

mixin offline
  img.bg(src='/img/hypnologo_base.gif')
  .topleft
    h2.answer No :( But, the next show is #{name}.  
    h3.showtime It starts on #{getDateTimeString(startTime)} #{timeZone}, or #[span(id='localTime')] local time
    #countdown
     h2.counter #[div(id='daysContainer' class='counter') #[span(id='days')] #[span(class='counterLabel') d]]
       | #[div(class='counter') #[span(id='hours')] #[span(class='counterLabel') hr]]
       | #[div(class='counter') #[span(id='minutes')] #[span(class='counterLabel') min]]
       | #[div(class='counter') #[span(id='seconds')] #[span(class='counterLabel') sec]]

mixin live
  .topleft
    h2.answer Yes! :D (probably) #{name} is on! 
    h3.showtime It started on #{getDateTimeString(startTime)} #{timeZone}.  Watch it below:
  #player
         
block content
  -var getDateTimeString = function(dateString) {
    -  var date = moment(dateString, 'dddd HH:mm:ss z');
    -  
    -  return date.format('dddd') + ' at ' + date.format('HH:mm');
  -}

  #overlay-container
    img.overlay(src='/img/overlay.png')
    if live
      mixin live
    else
      mixin offline
    .bottomleft
      p.tiny This site is not owned, operated or endorsed by Hyper RPG.  Any comments/suggestions/questions, find #[a(href='https://twitter.com/cryogen/') me] on twitter

    .bottomright
      ul.share-buttons
        li
          a(href='https://www.facebook.com/HyperRPG' title="Facebook" target="_blank")
            .button-container
              img.social-button(src='img/facebook.png')
              span.social-button
              |  HyperRPG
        li
         a(href='https://twitter.com/Hyper_RPG' target='_blank' title='Twitter')
           .button-container
             img.social-button(src='img/twitter.png')
             span.social-button
             | @Hyper_HPG
        li
          a(href='http://www.reddit.com/r/HyperRPG' target='_blank' title='Reddit')
            .button-container
              img.social-button(src='img/reddit.png')
              span.social-button
              | /r/HyperRPG
        li
          a(href='http://twitch.tv/hyperrpg' target='_blank' title='Twitch')
            .button-container
              img.social-button(src='img/twitch.png')
              span.social-button
              | HyperRPG
  
  script.
    var showTime = '#{startTime}';
    var currentTime = '#{currentTime}';
    var offset = '#{offset}';
    
  script(src='js/index.js')
  script(src='http://player.twitch.tv/js/embed/v1.js')
